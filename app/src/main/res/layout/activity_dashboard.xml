    <LinearLayout
        android:id="@+id/ll_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Springfield,"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Illinois"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans"
            android:textSize="25sp"/>

        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickUpdate"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_edit_location"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="13dp"
        android:text="Home"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_tempDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:layout_below="@+id/ll_loc">

        <TextView
            android:id="@+id/tv_highTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans_light"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_highTempVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#160;29"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans"
            android:textSize="25sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward"
            android:paddingLeft="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="||"
            android:textSize="25sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_lowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans_light"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_lowTempVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#160;29"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:fontFamily="@font/alegreya_sans"
            android:textSize="25sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_downward"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/tv_currTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/alegreya_sans"
            android:text="9"
            android:textColor="#fff"
            android:textSize="80sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_degFar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00B0F"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/alegreya_sans_light"
            android:textColor="#fff"
            android:textSize="45sp"
            android:layout_marginLeft="40dp"
            android:layout_alignLeft="@+id/tv_currTemp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_currWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_temp"
        android:text="Sunny"
        android:textColor="#fff"
        android:fontFamily="@font/alegreya_sans_light"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_heart"
        android:layout_below="@+id/tv_currWeather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/adMobView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>